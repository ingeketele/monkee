<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <span class="logo">MONKEE</span>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <span class="nav-link" data-toggle="modal" data-target=".bd-example-modal-lg">Create an activity</span>

          <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <% @categories = ["Courses", "Creative", "Midnfulness", "Music & Dance", "Playdates", "Outdoors", "Sports", "Farm Day"] %>
                <h3>Create an activity</h3>
                <% @test = Activity.new %>
                <% @activity_image = @test.activity_images.build %>
                <%= simple_form_for @test do |f| %>
                  <%= f.input :title %>
                  <%= f.input :age_group, as: :radio_buttons, collection: @age_group, wrapper: :vertical_collection_inline %>
                  <%= f.input :category, as: :radio_buttons, collection: @categories, wrapper: :vertical_collection_inline %>
                  <%= f.input :address %>
                  <%= f.input :date %>
                  <%= f.input :duration %>
                  <%= f.input :description %>
                  <%= f.input :capacity %>

                  <%= f.fields_for :activity_images do |p| %>
                     <div class="field">
                       <%= p.label :photo %><br>
                       <%= p.file_field :photo, :multiple => true, name: "activity_images[photo][]" %>
                     </div>
                   <% end %>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <%= f.submit %>
                  </div>
                <% end %>
              </div>

            </div>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to "Find activities", activities_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Find a babysitter", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar.url || "avatar-default.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
